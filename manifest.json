{
  "manifest_version": 3,
  "name": "JobStreak",
  "version": "1.5",
  "description": "Track and manage saved job applications.",
  "permissions": ["storage", "activeTab"],
  "background": {
        "service_worker": "background.js"
  },
  "content_scripts": [
    {
        "matches": [
            "https://www.linkedin.com/*",
            "https://www.indeed.com/*",
            "https://www.glassdoor.com/*",
            "https://*.ziprecruiter.com/*",
            "https://*.dice.com/*",
            "https://*.wellfound.com/*",
            "https://wellfound.com/*"
        ],
        "js": ["contentScript.js"]
    }
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "icon.png"
    },
    "icons": {
        "48": "icon.png"
    }
}